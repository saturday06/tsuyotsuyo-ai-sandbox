root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_size = 2
indent_style = space
tab_width = 4
trim_trailing_whitespace = true

[*.bat]
charset = latin1
end_of_line = crlf

[*.ps1]
charset = utf-8-bom

[*.rdp]
charset = utf-16le

[{.git,.venv,node_modules}/**]
charset = unset
end_of_line = unset
insert_final_newline = unset
indent_size = unset
indent_style = unset
tab_width = unset
trim_trailing_whitespace = unset
